{
  "manifest_version": 2,
  "name": "WordGlance - Dictionary & Translation Tooltip",
  "version": "2.1.0",
  "description": "Show instant dictionary definitions and translations for selected text with any language support.",
  "icons": {
    "16": "assets/icon_16.png",
    "32": "assets/icon_32.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "storage",
    "menus",
    "activeTab",
    "https://api.dictionaryapi.dev/*",
    "https://ftapi.pythonanywhere.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "WordGlance",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon_16.png",
      "32": "assets/icon_32.png",
      "48": "assets/icon_48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "wordglance-open-settings": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Open WordGlance settings"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}